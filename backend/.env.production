# 生产环境配置
ENV=production
PORT=8080

# 数据库配置
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres123
DB_NAME=promeconfig
DB_SSL_MODE=disable

# JWT配置（生产环境请使用强密钥）
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# Prometheus配置
PROMETHEUS_URL=http://prometheus:9090
PROMETHEUS_USERNAME=
PROMETHEUS_PASSWORD=

# Redis配置（可选）
REDIS_URL=redis://redis:6379

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 服务器配置
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=60s

# CORS配置
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*